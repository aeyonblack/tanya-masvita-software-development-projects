<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="12dp"
    app:contentPadding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/user_profile_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/round_background"
            android:contentDescription="@string/profile_photo"/>

        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username_placeHolder"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/user_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Around Pretoria"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/user_age_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age 17" />

        <TextView
            android:id="@+id/user_relationship_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relationship: Single"/>


        <TextView
            android:id="@+id/user_bio_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/place_holder_bio"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/edit_text_background_filled"
            android:padding="12dp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/colorGray"/>


        <Button
            android:id="@+id/follow_user_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="follow"
            android:textStyle="bold"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>